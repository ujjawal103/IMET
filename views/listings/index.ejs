    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col mt-3 listing-card">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="listings" style="height: 20rem;">
              
              <div class="card-img-overlay">
                <small><%= listing.name %></small>
              </div>
              
              <div class="card-body">
                <p class="card-text">
                 <b class="profIndex"> <%= listing.profession %> </b> <br>
                  â‚¹ <%= listing.price.toLocaleString("en-IN") %> / hour
                </p>
              </div>
            </div>
            </a>
          <% } %>  
    </div>
    


    
    <script>
      let profIndex = document.querySelectorAll(".profIndex");
      for(let prof of profIndex){
        let profContent = prof.innerText.toString();
        if(profContent.length > 82){
          prof.innerText = `${profContent.slice(0,82)} ...`;
        }
      }
    </script> 



<style>
 /* Scrollable Filter Container */
.filter-container {
    overflow-x: auto; /* Enables horizontal scrolling */
    white-space: nowrap; /* Prevents items from wrapping */
    padding: 10px 0;
}

/* Filters inside */
.filters {
    display: flex;
    gap: 15px;
    flex-wrap: nowrap; /* Keeps items in one line */
    padding-bottom: 10px;
}

/* Individual Filter Items */
.filter-item {
    flex: 0 0 auto; /* Ensures items do not shrink */
    text-align: center;
    min-width: 120px; /* Keeps each item evenly spaced */
    padding: 10px;
    border-radius: 8px;
    background: #f8f9fa;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease-in-out;
}

/* Hover Effect */
.filter-item:hover {
    transform: scale(1.05);
}

/* Hide scrollbar on Webkit browsers */
.filter-container::-webkit-scrollbar {
    display: none;
}

</style>


  

